<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>classes.TrackerServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>GetIPServlet</servlet-name>
        <servlet-class>servlets.GetIPServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PutIPServlet</servlet-name>
        <servlet-class>servlets.PutIPServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetMaxAgeServlet</servlet-name>
        <servlet-class>servlets.SetMaxAgeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetIPServlet</servlet-name>
        <url-pattern>/GetIPServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PutIPServlet</servlet-name>
        <url-pattern>/PutIPServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetMaxAgeServlet</servlet-name>
        <url-pattern>/SetMaxAgeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
