<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>classes.ServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>TheUploadServlet</servlet-name>
        <servlet-class>servlets.TheUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TheDownloadServlet</servlet-name>
        <servlet-class>servlets.TheDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CentralMessageService</servlet-name>
        <servlet-class>servlets.CentralMessageService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateXMLServlet</servlet-name>
        <servlet-class>servlets.ValidateXMLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetLists</servlet-name>
        <servlet-class>servlets.GetLists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateSession</servlet-name>
        <servlet-class>servlets.CreateSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartStopSession</servlet-name>
        <servlet-class>servlets.StartStopSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PutFileInPackServlet</servlet-name>
        <servlet-class>servlets.PutFileInPackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TheDownloadServlet</servlet-name>
        <url-pattern>/TheDownloadServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CentralMessageService</servlet-name>
        <url-pattern>/CentralMessageService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateXMLServlet</servlet-name>
        <url-pattern>/ValidateXMLServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetLists</servlet-name>
        <url-pattern>/GetLists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TheUploadServlet</servlet-name>
        <url-pattern>/TheUploadServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateSession</servlet-name>
        <url-pattern>/CreateSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartStopSession</servlet-name>
        <url-pattern>/StartStopSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PutFileInPackServlet</servlet-name>
        <url-pattern>/PutFileInPackServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
